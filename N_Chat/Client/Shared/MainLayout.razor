@inject NavigationManager navigationManager
@inherits LayoutComponentBase
@inject NavigationManager NavManager
@inject IUserService UserService 

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<div class="page">
    <AuthorizeView>
        <Authorized>
                <div class="sidebar">
                    <NavMenu/>
                </div>
        </Authorized>
    </AuthorizeView>
    <main>
        <div class="top-row px-4">
            <input class="Searchbar" name="searchInputField" placeholder="Search" @bind="userName" required="">
            <button class="btn btn-primary" name="searchButton" @onclick="search" ></button>
            <button class="oi oi-person" aria-hidden="true" @onclick="@(() => navigationManager.NavigateTo("/Register"))"></button>
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>
        <AuthorizeView>
            <NotAuthorized>
                <div class="center-authorize-login ">
                    <LoginDisplay></LoginDisplay>
                </div>
            </NotAuthorized>
            <Authorized>
                <article class="content px-4">
                    @Body
                </article>
            </Authorized>
        </AuthorizeView>
    </main>
</div>
@code{
    bool errorCheck = false;
    string error;
    public string? userName{ get; set; }
    public string? newUserName { get; set; }

    public async void search()
    {
        var newUser = await UserService.GetUserByName(userName);
        if(newUser == null)
        {
            error = "User is not found";
            errorCheck = true;
        }
        newUserName = newUser.UserName;
        NavManager.NavigateTo($"/profile/{newUserName}");
    }

}